<% provide(:title, "Games") %>

<FONT face="georgia">
<FONT size="4pt">


<h1 align="center"><b><%= @games.count %> jeux disponibles</b></h1>

<%= @games.in_groups_of(3, false).each do |group| %>

  <div class="row">
    <% group.each do |game| %>
    	<div class="col-sm-6 col-md-4">
        <div class="thumbnail">
         		<%= image_tag game.image.url(:medium), alt: game.title %>
          	<div class="caption">
            	<h3><%= game.title %></h3>
            	<p><%= truncate(game.description, length: 50) %></p>
            	<p><%= link_to "Je veux en savoir plus", game_path(game.slug), class: "btn btn-primary", role: "button" %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

